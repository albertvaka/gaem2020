#include "tiledexport.h"

{% for k, v in entities_by_type.items() -%}
	{%- if v|length > 1 -%}
const std::array<vec, {{v|length}}> TiledEntities::{{k}} = {
{%- for e in v %}
	vec({{e[0]}}f, {{e[1]}}f),
{%- endfor %}
};
{% else -%}
	const vec TiledEntities::{{k}} = vec({{v[0][0]}}f, {{v[0][1]}}f);
{% endif %}
{% endfor %}

{% for k, v in polygons_by_type.items() -%}
const std::array<vec, {{v|length}}> TiledPolygons::{{k}} = {
	{%- for p in v %}
	vec({{p[0]}}f,{{p[1]}}f),
	{%- endfor %}
};
{% endfor %}

{% for k, v in areas_by_type.items() -%}
const std::array<Bounds, {{v|length}}> TiledAreas::{{k}} = {
	{%- for s in v %}
	Bounds({{s[0]}}f,{{s[1]}}f,{{s[2]}}f,{{s[3]}}f),
	{%- endfor %}
};
{% endfor %}

